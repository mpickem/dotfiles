[user]
	name = Matthias Pickem
	email = matthias.pickem@gmail.com
[core]
	editor = vim
  pager  = less -F -X
[push]
	default = simple
[alias]
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lgg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  ls = ls-tree -r --name-only
	d = difftool
[commit]
	gpgSign = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
